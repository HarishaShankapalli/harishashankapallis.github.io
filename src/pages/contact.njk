{% set page = { title: "Contact" } %}
{% extends "layout.njk" %}

{% block content %}

<section class="contact">
  <div class="container">
    <h2>Contact Me</h2>
    <p>If you’d like to get in touch, please fill out the form below or use the details provided. I’ll get back to you as soon as possible!</p>

    <div class="contact-grid">
      <!-- Contact Form -->
      <div class="contact-form">
        <form action="#" method="post">
          <div class="form-group">
            <label for="name">Full Name</label>
            <input type="text" id="name" name="name" placeholder="Enter your full name" required>
          </div>

          <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" placeholder="Enter your email" required>
          </div>

          <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="tel" id="phone" name="phone" placeholder="Enter your phone number">
          </div>

          <div class="form-group">
            <label for="subject">Subject</label>
            <input type="text" id="subject" name="subject" placeholder="Subject of your message">
          </div>

          <div class="form-group">
            <label for="message">Message</label>
            <textarea id="message" name="message" rows="5" placeholder="Write your message here..." required></textarea>
          </div>

          <button type="submit" class="btn">Send Message</button>
        </form>
      </div>

      <!-- Contact Info -->
      <div class="contact-info">
        <h3>Other Ways to Connect</h3>
        <p>📧 Email: <a href="mailto:example@email.com">example@email.com</a></p>
        <p>📞 Phone: <a href="tel:+1234567890">+1 234 567 890</a></p>
        <p>📍 Location: Hyderabad, India</p>
      </div>
    </div>
  </div>
</section>

{% endblock %}
